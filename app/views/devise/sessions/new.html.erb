<h2>ログイン -Log in-</h2>

<%= form_for resource, as: resource_name, url: session_path(resource_name),html: {class: "uk-fieldse"} do |f| %>
  <div class="uk-margin">
    <%= f.label :email, "メールアドレス -Email-",class: "uk-form-label" %><br>
    <div class="uk-inline">
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail"></span>
      <%= f.email_field :email,class: "uk-input uk-form-large",type: "text", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.label :password, "パスワード -Password-",class: "uk-form-label" %><br />
    <div class="uk-inline">
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
      <%= f.password_field :password,class: "uk-input uk-form-large",type: "text",autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me,class: "uk-checkbox" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン -Log in-",class: "uk-button uk-button-primary uk-width-1-1 " %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

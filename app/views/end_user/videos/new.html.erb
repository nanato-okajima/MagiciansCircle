<h1>新規投稿</h1>

<%= form_for @video,url: end_user_videos_path, method: :post,html: {class: "uk-fieldse"} do |f| %>

  <div class="uk-margin">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title,class: "uk-input" %>
  </div>

  <div class="uk-margin">
    <%= f.label :category_id, "カテゴリー" %>
    <%= f.collection_select :category_id,Category.all,:id,:category_name,{},class: "uk-select" %>
  </div>

  <div class="uk-margin">
    <%= f.label :description, "説明文" %>
    <%= f.text_area :description,class: "uk-textarea" %>
  </div>

  <div class="uk-margin">
    <%= f.label :limit, "公開範囲" %>
    <%= f.select :limit, Video.limits.keys %>
  </div>

  <div class="uk-margin">
    <%= f.label :video, "ファイル選択" %>
    <%= f.file_field :video %>
  </div>

  <div class="uk-margin">
    <%= f.submit "登録",class: "uk-button uk-button-primary uk-width-1-1 " %>
  </div>


<% end %>


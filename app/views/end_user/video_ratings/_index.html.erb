
  <% @video_ratings.each do |video_rating| %>
    <div uk-grid class="comment_box<%= video_rating.id %>">
      <div class="uk-width-1-5">
        <% if video_rating.end_user.image? %>
          <%= image_tag video_rating.end_user.image.thumb.url %>
        <% else %>
          <%=image_tag "no_image.png", size: '80x80' %>
        <% end %>
      </div>
      <div class="uk-width-3-5">
        <%= video_rating.end_user.user_name %>
        評価<%= video_rating.rate %>点
        <%= video_rating.created_at.strftime("%Y/%-m/%-d") %><br>
        <%= video_rating.comment %>
      </div>
      <div class="uk-width-1-5" >
        <div>
          <button class="sampleSelect" >▽</button>
        </div>
        <ul>
          <li> <%= link_to "編集", edit_end_user_video_rating_path(video_rating.id),remote: true %></li><br>
          <li><%= link_to "削除", end_user_video_rating_path(video_rating.id),method: :delete,remote: true,"data-confirm": "本当に削除しますか？" %></li><br>
          <li id="reply"><%= link_to "返信",new_end_user_video_rating_reply_comment_path(video_rating.id),remote: true %></li>
        </ul>
      </div>
    </div>

   <div id="reply-form<%= video_rating.id %>"></div>
    <div id="edit-video-rating-form<%= video_rating.id %>"></div>


    <% video_rating.reply_comments.each do |reply_comment| %>
      <div uk-grid class="reply_comment_box">
        <div class="uk-width-4-5">
          <%= reply_comment.comment %>
        </div>
        <div class="uk-width-1-5">
          <%= link_to "編集", edit_end_user_video_rating_path(video_rating.id) %>
          <%= link_to "削除", end_user_video_rating_reply_comment_path(video_rating.id,reply_comment.id),method: :delete,"data-confirm": "本当に削除しますか？" %><br>
        </div>
      </div>
    <% end %>

  <% end %>

<script>
$(function(){
  $(".sampleSelect")
    .on('click',function(){
      var menu = $(this).parent().next().show().position({
        my: "left top",
        at: "left bottom",
        of: this
      });
      $( document ).one( 'click', function() {
        menu.hide();
      });
      return false;
    })
  .parent()
  .buttonset()
  .next()
  .hide()
  .menu();
});
</script>
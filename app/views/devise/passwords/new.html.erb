<h2>パスワードをお忘れの方 -Forgot your password?-</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス -email-" %><br />
    <div class="uk-inline">
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail"></span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "uk-input" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "送信-Send- ",class: "uk-button uk-button-primary uk-width-1-1 " %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

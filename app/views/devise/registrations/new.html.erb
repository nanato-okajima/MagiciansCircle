<div class="signup-container">
  <h2>新規登録 -Sign up-</h2>

  <%= form_for resource, as: resource_name, url: registration_path(resource_name),html: {class: "uk-fieldse"}  do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="uk-margin">
      <%= f.label :user_name, "ユーザーネーム -User Name-",class: "uk-form-label" %>
      <div class="uk-inline">
        <span class="uk-form-icon" uk-icon="icon: user"></span>
        <%= f.text_field :user_name,class: "uk-input",autofocus: true %>
      </div>
    </div>

    <div class="uk-margin">
      <%= f.label :email, "メールアドレス -Email-",class: "uk-form-label" %>
      <div class="uk-inline">
        <span class="uk-form-icon" uk-icon="icon: mail"></span>
        <%= f.email_field :email, autocomplete: "email",class: "uk-input"  %>
      </div>
    </div>

    <div class="uk-margin">
      <%= f.label :password, "パスワード -Password-",class: "uk-form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em><br>
      <% end %>
      <div class="uk-inline uk-form-password">
        <span class="uk-form-icon" uk-icon="icon: lock"></span>
        <%= f.password_field :password, autocomplete: "new-password",class: "uk-input" %>
      </div>
    </div>

    <div class="uk-margin">
      <%= f.label :password_confirmation, "パスワード確認用（再入力） -Password Comfirmation-",class: "uk-form-label" %><br>
      <div class="uk-inline uk-form-password">
        <span class="uk-form-icon" uk-icon="icon: lock"></span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "uk-input" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "新規登録 -Sign up-",class: "uk-button uk-button-primary uk-width-1-1 " %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

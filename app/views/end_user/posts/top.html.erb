<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>
<div class="main-visual"></div>
<div class="uk-section-secondary news">
  <h2>News</h2>
  <h3>動画</h3>
  <% @new_videos.each do |video| %>
    <%= video.created_at.strftime("%Y/%-m/%-d %H:%M") %>
    <%= video.title %><br>
  <% end %>
  <h3>イベント</h3>
  <% @new_events.each do |event| %>
    <%= event.created_at.strftime("%Y/%-m/%-d %H:%M") %>
    <%= event.title %><br>
  <% end %>
  <h2>更新情報</h2>
  <h3>動画</h3>
  <% @update_videos.each do |video| %>
    <%= video.created_at.strftime("%Y/%-m/%-d %H:%M") %>
    <%= video.title %><br>
  <% end %>
  <h3>イベント</h3>
  <% @update_events.each do |event| %>
    <%= event.created_at.strftime("%Y/%-m/%-d %H:%M") %>
    <%= event.title %><br>
  <% end %>
</div>
<div uk-grid>
  <div class="uk-width-1-4@l uk-width-1-1">
    <div class="site-menu">
  	  <%= link_to end_user_about_path do %>
        <img src="/images/hat-icon.png">このサイトについて<img src="/images/hat-icon.png">
      <% end %>
    </div>
    <% if end_user_signed_in? %>
      <div class="site-menu">
        <%= link_to new_end_user_video_path do %>
          <img src="/images/video-new.png">　　動画投稿　　　<img src="/images/video-new.png">
        <% end %>
      </div>
    <% end %>
    <div class="site-menu">
      <%= link_to end_user_videos_path do %>
        <img src="/images/video-index.png">　　動画一覧　　　<img src="/images/video-index.png">
      <% end %>
    </div>
    <% if end_user_signed_in? %>
      <div class="site-menu">
        <%= link_to new_end_user_event_path,data:{"turbolinks"=>false} do %>
          <img src="/images/calendar.png">　　イベント投稿　　<img src="/images/calendar.png">
        <% end %>
      </div>
    <% end %>
    <div class="site-menu">
      <%= link_to end_user_events_path,data:{"turbolinks"=>false} do %>
        <img src="/images/calendar-index.png">　　イベント一覧　　<img src="/images/calendar-index.png">
      <% end %>
    </div>
    <% if false %><!--今後コンテンツ拡張の際用-->
      <div class="site-menu">
        <%= link_to end_user_mypage_path do %>
          <img src="/images/man-icon.png">　　マイページ　　<img src="/images/man-icon.png">
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="uk-width-3-4@l uk-width-1-1 uk-text-center uk-margin">
    <h2><img src="/images/tranpuline.png" class="ranking-title"> 高評価動画ランキング <img src="/images/tranpuline.png" class="ranking-title"></h2>
    <% if @videos_rating_ranking %>
      <div uk-grid>
        <% @videos_rating_ranking.each.with_index(1) do |ranking,i| %>
          <div class="uk-grid-match uk-width-1-3@l">
            <%= link_to end_user_video_path(ranking.id),data: {"turbolinks" => false},id: "under-line-delete" do %>
              <i class="fas fa-crown crown<%=i %>"><%= i %>位</i> <%= ranking.title.truncate(21) %>
              <%= image_tag(ranking.video_url(:screenshot), alt: "screenshot",class: "rankingframe" + i.to_s) %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <h2><img src="/images/tranpuline.png" class="ranking-title"> 再生回数ランキング <img src="/images/tranpuline.png" class="ranking-title"></h2>
    <% if @videos_views_ranking %>
      <div uk-grid>
        <% @videos_views_ranking.each.with_index(1) do |ranking,i| %>
          <div class="uk-grid-match uk-width-1-3@l">
            <%= link_to end_user_video_path(ranking.id),data: {"turbolinks" => false},id: "under-line-delete" do %>
              <i class="fas fa-crown crown<%=i %>"><%= i %>位</i> <%= ranking.title.truncate(21) %>
              <%= image_tag(ranking.video_url(:screenshot), alt: "screenshot",class: "rankingframe" + i.to_s ) %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <h2><img src="/images/tranpuline.png" class="new-videos"> 新着動画 <img src="/images/tranpuline.png" class="new-videos"></h2>
    <% if @new_videos %>
      <div uk-grid>
        <% @new_videos.each do |video| %>
          <div class="uk-grid-match uk-width-1-5@l">
            <%= link_to end_user_video_path(video.id),data: {"turbolinks" => false},id: "under-line-delete" do %>
              <%= video.title.truncate(13) %>
              <%= image_tag(video.video_url(:screenshot), alt: "screenshot") %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

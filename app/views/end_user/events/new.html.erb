<div class="event-new-container">
  <%if @event.errors.any? %>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <div class="uk-alert-warning" uk-alert>
          <a class="uk-alert-close" uk-close></a>
          <li><%= message %></li>
        </div>
      <% end %>
    </ul>
  <% end %>
  <%= form_for @event,url: end_user_events_path,method: :post,html: {class: "uk-fieldse"} do |f| %>

    <div class="uk-margin">
      <%= f.label :title, "イベント名",class: "uk-form-label" %>
      <%= f.text_field :title %>
    </div>

    <div class="uk-margin">
      <%= f.label :venue, "開催スポット",class: "uk-form-label" %>
      <%= f.text_field :venue %>
    </div>

    <div class="uk-margin">
      <%= f.label :start, "開始日時",class: "uk-form-label" %>
      <%= f.datetime_field :start,class: "uk-input" %>
    </div>

    <div class="uk-margin">
      <%= f.label :end, "終了日時",class: "uk-form-label" %>
      <%= f.datetime_field :end,class: "uk-input" %>
    </div>

    <div class="uk-margin">
      <%= f.label :address, "開催場所住所",class: "uk-form-label" %>
      <%= f.text_area :address,class: "uk-textarea" %>
    </div>

     <div class="uk-margin">
      <%= f.label :access, "アクセス",class: "uk-form-label" %>
      <%= f.text_field :access,class: "uk-textarea" %>
    </div>

    <div class="uk-margin">
      <%= f.label :description, "イベント内容",class: "uk-form-label" %>
      <%= f.text_area :description,class: "uk-textarea" %>
    </div>

    <div class="uk-margin">
      <%= f.label :fee, "料金に関して",class: "uk-form-label" %>
      <%= f.text_field :fee %><br>
    </div>

    <div class="uk-margin">
      <%= f.label :official_site, "オフィシャルサイト(URL)",class: "uk-form-label" %>
      <%= f.text_field :official_site %><br>
    </div>

    <div class="uk-margin">
      <%= f.label :image, "画像",class: "uk-form-label" %>
      <%= f.file_field :image %><br>
    </div>
    
    <%= f.submit "登録",class: "uk-button uk-button-primary uk-width-1-1 " %>
  <% end %>
</div>
<% if @video.limit == "公開" || @video.end_user_id == current_end_user.id %>
  <div id="video-id" data-id="<%=params[:id]%>"></div>
  <h1><%= @video.title %></h1>
  <ul>
    <% @video_tags.each do |video_tag| %>
      <li class="tag">
        <%= link_to end_user_tag_path(name: video_tag),method: :delete do %>
          <i class="fas fa-times-circle"></i> <!--タグの削除-->
        <% end %>
        <%= link_to video_tag, end_user_tags_path(@video,name: video_tag),class: "tag-name",id:"tag" %>
      </li>
    <% end %>
  </ul>
  <%= form_for @video,url: end_user_tags_path(@video),method: :post do |f|%>
    <%= text_field_tag 'video[tag_list]','',placeholder: "タグ名を入力(15文字以内)" %>
    <%= f.submit "登録",class: "uk-button-primary uk-button-small" %>
  <% end %>
  <%= video_tag @video.video_url.to_s,loop: true, controls: true, width: 1200, id: "mv" %><br><br>

  <div id="slider"></div>
  <div style="text-align: right">
    <span style="float:left" id="min"></span><span id="max"></span>
  </div>

  <div class="uk-margin">
    <label class="uk-form-label" for="form-stacked-select">再生速度</label>
    <select class="uk-select">
      <option value="0.25">x0.25</option>
      <option value="0.5">x0.5</option>
      <option value="0.75">x0.75</option>
      <option value="1.0" selected>x1.0</option>
      <option value="1.25">x1.25</option>
      <option value="1.5">x1.5</option>
      <option value="1.75">x1.75</option>
      <option value="2.0">x2.0</option>
    </select>
  </div>

  <i class="fas fa-redo" id="repeat" style="color: blue; font-size: 20px;" uk-tooltip="リピート再生"></i>


  <div class="uk-grid-divider uk-child-width-1-6@l video-info" uk-grid>
    <div>
      投稿日時<br>
      <%= @video.created_at.strftime("%Y/%-m/%-d %H:%M") %>
    </div>
    <div>
      カテゴリー<br>
      <%= link_to @video.category.category_name,end_user_categories_path(@video) %>
    </div>
    <div>
      総評<br>
      <% total_rating = 0 %>
      <% @video.video_ratings.each do |rating| %>
        <% total_rating += rating.rate %>
      <% end %>
      <%= total_rating %>
    </div>
    <div>
      <% if !Favorite.exists?(end_user_id:current_end_user.id ,video_id: @video.id) %>
        <%= link_to  end_user_favorite_video_path(@video.id), class: "fav", remote: true do %>
          <i class="fa fa-star" id="<%= @video.id %>" uk-tooltip="お気に入りに登録を変更"></i><br>
        <% end %>
      <% else %>
        <%= link_to end_user_favorite_video_path(@video.id), class: "fav",remote: true do %>
          <i class="fa fa-star fa-star-color" id="<%= @video.id %>"></i><br>
        <% end %><br>
      <% end %>
    </div>
    <div>
      再生回数<br>
      <div id="views"><%= @video.views %></div>
    </div>
  </div>
  <div class="uk-section-muted description">説明文　<%= @video.description %></div>
  <% if current_end_user.id == @video.end_user.id %>
    <%= link_to edit_end_user_video_path(@video.id) do %>
      <span class="uk-icon-button" uk-icon="settings" uk-tooltip="この動画を編集する"></span>
    <% end %>
  <% end %>
  <%= link_to new_end_user_video_rating_path(video_id: @video.id),remote: true do %>
    <span class="uk-icon-button" uk-icon="commenting" uk-tooltip="コメントする"></span>
  <% end %>
  <div id="result"></div>
  <div id="new-comment"></div>
  <div id="reply-comment-result"></div>

  <div id="flash_messages"></div>


  <div id="video_ratings_index">
    <%= render partial: "end_user/video_ratings/index",locals:{video_ratings: @video_ratings} %>
  </div>

<% end %>


<script>

  var start_time;
  var end_time;
  var video_time;
  var video = document.getElementById('mv');

  $(function(){
    $("#mv").on("loadedmetadata",function(){
      video_time = Math.floor(video.duration);//再生中常時現在時刻を取得

      $('#slider').slider({
        min: 0,
        max: video_time,
        step: 1,
        values: [0,video_time],
        range: true,
        change: function(e, ui) {  //スライダーの変化時に時間表示を更新
          var hms1 = toHms(ui.values[0]);
          var hms2 = toHms(ui.values[1]);
          $('#min').html(hms1);
          $('#max').html(hms2);
          start_time = ui.values[0];
          end_time = ui.values[1];
        },
        create: function(e, ui) { //スライダー初期化時に時間表示を反映
          var values = $(this).slider('option', 'values');
          var hms1 = toHms(values[0]);
          var hms2 = toHms(values[1]);
          $('#min').html(hms1);
          $('#max').html(hms2);
        }
      });
      video.addEventListener('timeupdate', function (e) {
        if(Math.floor(video.currentTime)　< start_time || Math.floor(video.currentTime) > end_time){//現在時刻が開始時刻より早い場合又は、現在時刻が終了時刻より大きい時
          video.currentTime = start_time;//現在時刻を開始時刻にする
        }
        if(Math.floor(video.currentTime) === end_time){//現在時刻が終了時刻になったら
          video.currentTime = start_time;//開始時刻に戻して再生
          video.play();
        }
      });
    });
  });

  $(function(){
    var id;
    $("#mv").one("play",function(){
      id = $("#video-id").data("id");
      $.ajax({
        url: `/end_user/video/${id}/count`,
        type: 'POST',
        data: {video_id: id},
        datatype: "html",
        success: function(data){
          $("#views").text(data);
        }
      });
    });
  });

function toHms(t){
    var hms = "";
    var h = t / 3600 | 0;
    var m = t % 3600 / 60 | 0;
    var s = t % 60;

    if(h !== 0){
      hms = h + ":" + padZero(m) + ":" + padZero(s);
    }else if (m !== 0){
      hms = m + ":" + padZero(s);
    }else{
      hms = "0" + ":" + padZero(s);
    }

    return hms;

    function padZero(v){
      if(v < 10){
        return "0" + v;
      }else{
        return v;
      }
    };
  };



</script>


